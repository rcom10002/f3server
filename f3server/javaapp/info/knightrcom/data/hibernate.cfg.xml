<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

<session-factory>
	<property name="connection.url">
		jdbc:mysql://localhost:3306/f3s?useUnicode=true&amp;characterEncoding=UTF-8
	</property>
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<property name="myeclipse.connection.profile">MySql</property>
	<property name="connection.username">root</property>
	<property name="connection.password">root</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>

	<property name="connection.provider_class">
		org.hibernate.connection.C3P0ConnectionProvider
	</property>
	<property name="c3p0.minPoolSize">5</property>
	<property name="c3p0.maxPoolSize">30</property>
	<property name="c3p0.initialPoolSize">10</property>
	<!-- <property name="c3p0.automaticTestTable">Test</property> -->
	<property name="c3p0.maxIdleTime">25000</property>
	<property name="c3p0.acquireIncrement">5</property>
	<property name="c3p0.maxStatements">0</property>
	<property name="c3p0.idleConnectionTestPeriod">18000</property>
	<property name="c3p0.acquireRetryAttempts">10</property>
	<property name="c3p0.breakAfterAcquireFailure">false</property>
	<property name="c3p0.testConnectionOnCheckout">true</property>
	<property name="c3p0.testConnectionOnCheckin">true</property>
	<property name="cache.use_second_level_cache">false</property>
	<property name="cache.use_query_cache">false</property>
	<mapping class="info.knightrcom.data.metadata.PlayerProfile" />
	<mapping class="info.knightrcom.data.metadata.GameRecord" />
	<mapping class="info.knightrcom.data.metadata.GameFeedback" />
	<mapping class="info.knightrcom.data.metadata.GlobalConfig" />
	<mapping class="info.knightrcom.data.metadata.PeriodlySum" />
	<mapping class="info.knightrcom.data.metadata.PlayerScore" />
	<mapping class="info.knightrcom.data.metadata.LogInfo" />
	<mapping class="info.knightrcom.data.metadata.PeriodlySum" />
	<mapping
		resource="info/knightrcom/web/data/GameFeedbackService.hbm.xml" />
	<mapping
		resource="info/knightrcom/web/data/PlayerScoreService.hbm.xml" />
	<mapping
		resource="info/knightrcom/web/data/PlayerProfileService.hbm.xml" />
	<mapping
		resource="info/knightrcom/web/data/GameConfigureService.hbm.xml" />
	<mapping
		resource="info/knightrcom/web/data/ReportScoreService.hbm.xml" />
	<mapping
		resource="info/knightrcom/web/data/ReportBusinessService.hbm.xml" />
</session-factory>

</hibernate-configuration>